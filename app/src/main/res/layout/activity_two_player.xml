<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.jain.tavish.tictactoe.TwoPlayerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/btn_new_game"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorAccent"
        android:text="New Game"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:background="@color/colorPrimary"
        android:id="@+id/cardview"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_turn_teller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="20dp"
            android:textStyle="bold"
            android:text="O's turn"
            android:fontFamily="casual"
            android:textColor="@color/colorAccent"
            android:textSize="40sp" />

    </android.support.v7.widget.CardView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cardview"
        android:id="@+id/grid_layout"
        android:background="@color/colorAccent"
        android:rowCount="3"
        android:columnCount="3">

        <ImageView
            android:layout_width="100dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/ic_red_back"
            android:layout_height="100dp"
            android:id="@+id/id_0_0" />

        <ImageView
            android:id="@+id/id_0_1"
            android:layout_width="100dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/ic_red_back"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/id_0_2"
            android:layout_marginBottom="1dp"
            android:layout_width="100dp"
            android:background="@drawable/ic_red_back"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/id_1_0"
            android:background="@drawable/ic_red_back"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/id_1_1"
            android:background="@drawable/ic_red_back"
            android:layout_marginBottom="1dp"
            android:layout_width="100dp"
            android:layout_marginEnd="1dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/id_1_2"
            android:layout_width="100dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ic_red_back"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/id_2_0"
            android:background="@drawable/ic_red_back"
            android:layout_marginEnd="1dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/id_2_1"
            android:layout_width="100dp"
            android:background="@drawable/ic_red_back"
            android:layout_marginEnd="1dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/id_2_2"
            android:background="@drawable/ic_red_back"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </GridLayout>

</RelativeLayout>
